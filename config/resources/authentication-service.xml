<b:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:b="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                    http://www.springframework.org/schema/security 
                    http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<http use-expressions="true" auto-config="false">
		<intercept-url pattern="/**" access="isAuthenticated()" />
		<form-login />
	</http>

	<!-- TO USE LDAP CONFIGURATION, UNCOMMENT THE NEXT THREE XML BLOCKS AND 
		ADD APPROPRIATE ALTER THE CONFIGURATION FOR YOUR SYSTEM. -->

	<!-- 1. Modify the ldap-server block to an appropriate URL for your LDAP 
		configuration. -->

	<!-- 2. In the LdapUserContextMapper bean, set the LdapEmailAddressAttributeIds 
		property to the (or a comma-separated list of) attributes that contain email 
		addresses (e.g., "mail,email"). -->

	<!-- 3. Change the authentication-manager block to match your configuration 
		using Spring Security, which has a number of options. Read http://static.springsource.org/spring-security/site/docs/3.1.x/reference/springsecurity-single.html#ldap 
		carefully for details. Be certain that the group-search-base attribute refers 
		to the organizational unit that contains groups named ENKIVE_ADMIN and ENKIVE_USER 
		to indicate roles/authorities. -->
		
	<!--

	<ldap-server url="ldap://10.1.1.55:389/dc=linuxbox,dc=com" />

	<b:bean id="LdapUserContextMapper"
		class="com.linuxbox.enkive.authentication.ldap.EnkiveLdapUserDetailsContextMapper"
		scope="singleton">
		<b:property name="LdapEmailAddressAttributeIds" value="mail,zimbraMailDeliveryAddress" />
	</b:bean>

	<authentication-manager alias="authenticationManager">
		<ldap-authentication-provider
			user-context-mapper-ref="LdapUserContextMapper"
			user-dn-pattern="uid={0},ou=people"
			group-search-base="ou=EnkiveRoles,ou=groups" />
	</authentication-manager>
	
	-->

	<!-- TO USE LDAP CONFIGURATION, COMMENT OUT THE authentication-manager BLOCK 
		IMMEDIATELY BELOW. -->

	<authentication-manager alias="authenticationManager">
		<authentication-provider>
			<password-encoder hash="sha" />
			<user-service id="userDetailsService" properties="classpath:users.properties" />
		</authentication-provider>
	</authentication-manager>

</b:beans>
