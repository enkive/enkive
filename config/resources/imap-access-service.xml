<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	default-init-method="startup" default-destroy-method="shutdown">

	<bean id="IMAPServer" class="com.linuxbox.enkive.imap.ImapAccessServer">
		<constructor-arg ref="EnkiveImapMailboxManager" />
	</bean>

	<bean id="EnkiveImapMailboxManager" class="com.linuxbox.enkive.imap.EnkiveMailboxManager">
		<constructor-arg ref="EnkiveMailboxSessionMapperFactory" />
		<constructor-arg ref="EnkiveImapSpringContextAuthenticator" />
		<constructor-arg ref="EnkiveImapMailboxACLResolver" />
		<constructor-arg ref="EnkiveImapGroupMembershipResolver" />
	</bean>

	<bean id="EnkiveMailboxSessionMapperFactory"
		class="com.linuxbox.enkive.imap.EnkiveMailboxSessionMapperFactory">
		<property name="retrieverService" ref="MongoMessageRetrieverService" />
	</bean>

	<bean id="EnkiveImapSpringContextAuthenticator"
		class="com.linuxbox.enkive.imap.authentication.EnkiveImapSpringContextAuthenticator">
		<constructor-arg ref="authenticationManager" />
	</bean>

	<bean id="EnkiveImapMailboxACLResolver" class="com.linuxbox.enkive.imap.EnkiveImapMailboxACLResolver">
	</bean>

	<bean id="EnkiveImapGroupMembershipResolver"
		class="com.linuxbox.enkive.imap.EnkiveImapGroupMembershipResolver">
	</bean>

</beans>