<b:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:b="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
                    http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                    http://www.springframework.org/schema/security 
                    http://www.springframework.org/schema/security/spring-security-3.1.xsd">


	<b:bean id="PropFileUserDetailsService" class="">
		<b:property name="" value="" />
		<fix-password-encoder hash="sha" />
		<fix-user-service id="userDetailsService" properties="classpath:users.properties" />
	</b:bean>

	<authentication-manager alias="authenticationManager">
		<authentication-provider user-service-ref="PropFileUserDetailsService" />
	</authentication-manager>

</b:beans>
