<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	default-init-method="startup" default-destroy-method="shutdown">

	<bean id="MongoDBIndexManager" class="com.linuxbox.enkive.MongoDBIndexManager">
		<constructor-arg>
			<!-- this list should contain all services that may be implemented in 
				MongoDB; the MongoDBIndexManager will only interact with those that implement 
				MongoIndexable -->
			<list>
				<ref bean="DocLockService" />
				<ref bean="AuditLogService" />
				<ref bean="DocStoreService" />
				<ref bean="IndexerQueueService" />
				<ref bean="MongoMessageArchivingService" />
			</list>
		</constructor-arg>
	</bean>
</beans>
