	<bean id="FifteenMinuteGatherers" class="java.util.LinkedList">
    <constructor-arg>
      <list>
        <ref bean="RuntimeStatsService" />
		<ref bean="MsgStatsService" />
		<ref bean="CollectionStatsService" />
		<ref bean="AttachmentStatsService" />
		<ref bean="DatabaseStatsService" />
      </list>      
    </constructor-arg>
  </bean>

<bean id="FifteenMinutesSchedulerService"
		class="com.linuxbox.enkive.statistics.gathering.GatheringScheduler">
		<constructor-arg name="name" value="FifteenMinutesScheduler" />
		<constructor-arg name="gatherers" ref="FifteenMinuteGatherers"/>
		<constructor-arg name="scheduler" ref="ScheduledJobsBean"/>
		<constructor-arg name="schedule" value="0 0/15 * * * ?" />
	</bean>
</beans>
	