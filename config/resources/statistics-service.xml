<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	default-init-method="startup" default-destroy-method="shutdown">
	
	<!-- Statistics Gathering related beans -->
	<context:annotation-config />
	
	<bean id="StatisticsStorer" class="com.linuxbox.enkive.statistics.services.storage.mongodb.MongoStatsStorageService">
		<constructor-arg ref="Mongo" />
		<constructor-arg type="java.lang.String" value="${enkive.messagestore.db.name}" />
	</bean>
	
	<bean id="MsgStatsService"
		class="com.linuxbox.enkive.statistics.gathering.mongodb.StatsMongoMsgGatherer">
		<constructor-arg ref="Mongo" />
		<constructor-arg type="java.lang.String" value="${enkive.messagestore.db.name}" />
		<constructor-arg type="java.lang.String" value="${enkive.messagestore.collection.name}" />
		<constructor-arg name="serviceName" value="MsgStatsService"/>
		<constructor-arg name="schedule" value="0/30 * * * * ?" />
		<property name="scheduler" ref="ScheduledJobsBean" />
		<property name="storageService" ref="StatisticsStorer" />
	</bean>
	
	<bean id="DetailedMsgStatsService"
		class="com.linuxbox.enkive.statistics.gathering.StatsMsgSearchGatherer">
		<constructor-arg name="serviceName" value="DetailedMsgStatsService"/>
		<constructor-arg name="schedule" value="0/30 * * * * ?" />
		<property name="scheduler" ref="ScheduledJobsBean" />
		<property name="searchService" ref="SystemMessageSearchService" />
		<property name="storageService" ref="StatisticsStorer" />
	</bean>

	<bean id="AttachmentStatsService"
		class="com.linuxbox.enkive.statistics.gathering.mongodb.StatsMongoAttachmentsGatherer">
		<constructor-arg ref="Mongo" />
		<constructor-arg type="java.lang.String" value="${enkive.messagestore.db.name}" />
		<constructor-arg type="java.lang.String" value="${enkive.docstore.fs.collection.name}" />
		<constructor-arg name="serviceName" value="AttachmentStatsService"/>
		<constructor-arg name="schedule" value="0/30 * * * * ?" />
		<property name="scheduler" ref="ScheduledJobsBean" />
		<property name="storageService" ref="StatisticsStorer" />
	</bean>
	
	<bean id="DatabaseStatsService"
		class="com.linuxbox.enkive.statistics.gathering.mongodb.StatsMongoDBGatherer">
		<constructor-arg ref="Mongo" />
		<constructor-arg type="java.lang.String" value="${enkive.messagestore.db.name}" />
		<constructor-arg name="serviceName" value="DatabaseStatsService"/>
		<constructor-arg name="schedule" value="0/30 * * * * ?" />
		<property name="scheduler" ref="ScheduledJobsBean" />
		<property name="storageService" ref="StatisticsStorer" />
	</bean>
	
	<bean id="CollectionStatsService"
		class="com.linuxbox.enkive.statistics.gathering.mongodb.StatsMongoCollectionGatherer">
		<constructor-arg ref="Mongo" />
		<constructor-arg type="java.lang.String" value="${enkive.messagestore.db.name}" />
		<constructor-arg name="serviceName" value="CollectionStatsService"/>
		<constructor-arg name="schedule" value="0/30 * * * * ?" />
		<property name="scheduler" ref="ScheduledJobsBean" />
		<property name="storageService" ref="StatisticsStorer" />
	</bean>
	
	<bean id="RuntimeStatsService"
		class="com.linuxbox.enkive.statistics.gathering.StatsRuntimeGatherer">
		<constructor-arg name="serviceName" value="RuntimeStatsService"/>
		<constructor-arg name="schedule" value="0/30 * * * * ?" />
		<property name="scheduler" ref="ScheduledJobsBean" />
		<property name="storageService" ref="StatisticsStorer" />
	</bean>

	<bean id="StatisticsGatherer" class="com.linuxbox.enkive.statistics.services.StatsGathererService">
		<constructor-arg>
			<map>
				<entry key="MsgStatsService" value-ref="MsgStatsService" />
				<entry key="DetailedMsgStatsService" value-ref="DetailedMsgStatsService" />
				<entry key="AttachmentStatsService" value-ref="AttachmentStatsService" />
				<entry key="DatabaseStatsService" value-ref="DatabaseStatsService" />
				<entry key="CollectionStatsService" value-ref="CollectionStatsService" />
				<entry key="RuntimeStatsService" value-ref="RuntimeStatsService" />
			</map>
		</constructor-arg>
	</bean>
	
	<bean id="StatisticsRetriever" class="com.linuxbox.enkive.statistics.services.retrieval.mongodb.MongoStatsRetrievalService">
		<constructor-arg ref="Mongo" />
		<constructor-arg type="java.lang.String" value="${enkive.messagestore.db.name}" />
	</bean>
	
	<bean id="StatisticsClient" class="com.linuxbox.enkive.statistics.services.StatsClient">
		<constructor-arg ref="StatisticsGatherer" />
		<constructor-arg ref="StatisticsStorer" />
		<constructor-arg ref="StatisticsRetriever" />
	</bean>

	<bean id="StatisticsEmailer" class="com.linuxbox.enkive.statistics.StatsReportEmailer">
		<constructor-arg ref="StatisticsGatherer" />
		<property name="to" value="lee@linuxbox.com" />
		<property name="from" value="lee@linuxbox.com" />
		<property name="mailHost" value="thunderbeast.private.linuxbox.com" />
	</bean>

	<bean id="StatisticsWriter"
		class="com.linuxbox.enkive.statistics.StatsReportLogWriter">
		<constructor-arg ref="StatisticsGatherer" />
	</bean>

	<bean id="StatisticsWriterJob"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="StatisticsWriter" />
		<property name="targetMethod" value="logReport" />
		<property name="concurrent" value="false" />
	</bean>
	
	<bean id="RemovalRunner"
		class="com.linuxbox.enkive.statistics.removal.Remove">
		<constructor-arg name="client" ref="StatisticsClient" />
		<property name="rawBuff" value="2"/>
		<property name="hrBuff" value="48"/>
		<property name="dayBuff" value="30"/>	
		<property name="wkBuff" value="10"/>
		<property name="monthBuff" value="12"/>
	</bean>
		
	<bean id="GrainRunner"
		class="com.linuxbox.enkive.statistics.granularity.GrainRunner">
		<constructor-arg name="client" ref="StatisticsClient" />
		<constructor-arg name="scheduler" ref="ScheduledJobsBean" />
		<constructor-arg name="remover" ref="RemovalRunner" />
		<constructor-arg name="schedule" value="0 * * * * ?" />
	</bean>
	
<!--
	<bean id="StatisticsStorageJob"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="StatisticsClient" />
		<property name="targetMethod" value="gatherAndStoreData" />
		<property name="concurrent" value="false" />
	</bean>

	<bean id="StatisticsReportTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="StatisticsStorageJob" />
		<property name="cronExpression" value="* * * * 1 ?" />
	</bean>
-->
</beans>
	